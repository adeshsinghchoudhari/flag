def flag():
    import turtle
    from pygame import mixer
    import random


    ws=turtle.Screen()
    ws.title('happy indipendence day')
    flagTurtle = turtle.Turtle()
    mixer.init()


    mixer.music.load('jan.mp3')
    mixer.music.set_volume(1)
    mixer.music.play()
    flagTurtle.penup()
    flagTurtle.speed(0.999999)
    flagTurtle.goto(-180,60)



    flagTurtle.pendown()
    flagTurtle.begin_fill()
    flagTurtle.fillcolor("orange")
    flagTurtle.left(90)
    flagTurtle.forward(90)
    flagTurtle.right(90)
    flagTurtle.forward(400)
    flagTurtle.right(90)
    flagTurtle.forward(90)
    flagTurtle.right(90)
    flagTurtle.forward(400)
    flagTurtle.end_fill()





    flagTurtle.left(90)
    flagTurtle.forward(90)
    flagTurtle.left(90)
    flagTurtle.forward(400)
    flagTurtle.left(90)
    flagTurtle.forward(90)
    flagTurtle.left(90)
    flagTurtle.forward(400)
    flagTurtle.left(90)
    flagTurtle.forward(90)





    flagTurtle.begin_fill()
    flagTurtle.fillcolor("green")
    flagTurtle.forward(90)
    flagTurtle.left(90)
    flagTurtle.forward(400)
    flagTurtle.left(90)
    flagTurtle.forward(90)
    flagTurtle.left(90)
    flagTurtle.forward(400)
    flagTurtle.end_fill()



    flagTurtle.penup()
    flagTurtle.goto(1,60)
    flagTurtle.pendown()
    flagTurtle.begin_fill()
    flagTurtle.fillcolor("blue")
    flagTurtle.circle(45)
    flagTurtle.end_fill()








    flagTurtle.penup()
    flagTurtle.goto(1,15)
    flagTurtle.pendown()

    size=int(40)
    for i in range(24):
        flagTurtle.forward(size)
        flagTurtle.backward(size)
        flagTurtle.left(15)




#l=[(i,j)for i in range(-500,500) for j in range(-500,500) if i<-200 and i>200]


def sec():
    import turtle
    turtle.reset()
    turtle.hideturtle()
    turtle.speed(0)
        
    c = 0
    x = 0
    turtle.penup()
    turtle.goto(500,-200)
    turtle.pendown()

    colors = [
    #reddish colors
    
    #orangey colors
    (1.00, 0.50, 0.00),(1.00, 0.53, 0.00),(1.00, 0.55, 0.00),(1.00, 0.57, 0.00),(1.00, 0.60, 0.00),(1.00, 0.62, 0.00),(1.00, 0.65, 0.00),(1.00, 0.68, 0.00),(1.00, 0.70, 0.00),(1.00, 0.72, 0.00),(1.00, 0.75, 0.00),(1.00, 0.78, 0.00),(1.00, 0.80, 0.00),(1.00, 0.82, 0.00),(1.00, 0.85, 0.00),(1.00, 0.88, 0.00),(1.00, 0.90, 0.00),(1.00, 0.93, 0.00),(1.00, 0.95, 0.00),(1.00, 0.97, 0.00),
